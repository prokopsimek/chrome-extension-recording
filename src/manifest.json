{
  "manifest_version": 3,
  "name": "Google Meet Recorder",
  "description": "Record audio from a specific tab and stream it to a file",
  "version": "1.0",
  "background": {
    "service_worker": "background.ts"
  },
  "permissions": [
    "activeTab",
    "tabCapture",
    "tabs",
    "storage",
    "cookies",
    "offscreen"
  ],
  "host_permissions": [
    "http://localhost/*"
  ],
  "action": {
    "default_icon": {
      "16": "assets/icons/16.png",
      "24": "assets/icons/24.png",
      "32": "assets/icons/32.png"
    },
    "default_title": "Tooltip title",
    "default_popup": "pages/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content-script.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pages/offscreen/index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "assets/icons/64.png",
    "64": "assets/icons/64.png",
    "128": "assets/icons/128.png",
    "256": "assets/icons/256.png"
  }
}